<div class="row">
    <div class="col s12 m8">
        <h3>{{story.title}}
            <small>{{{editIcon story.creator authUser story._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                {{{writeTracker (formatDate createdAt formatDate updateddAt)}}}
                
                {{{story.body}}}
            </div>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.creator.displayName}}</span>
                <img src="{{story.creator.image}}" alt="avatar" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.creator._id}}">More from {{story.creator.firstName}}</a>
            </div>
        </div>
    </div>
</div>