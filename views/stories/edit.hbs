<h3>Edit story</h3>
<div class="row">
    <form action="/stories/edit" method="post" class="col s12">
        <div class="row">
            <div class="input-field">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="{{story.title}}">
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <label for="status">Status</label>
                <select name="status" id="status">
                    {{{editStoryStatus story.status}}}
                </select>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell us your story</h5>
                <textarea name="body" id="body">{{story.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <button type="submit" class="btn">Save</button>
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
        <input type="hidden" name="_method" value="patch">
    </form>
</div>