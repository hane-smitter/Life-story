<h1>Stories</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{!-- editIcon here --}}
                {{{editIcon creator ../authUser _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{{truncate (stripTags body) 150}}}</p>
                <br>
                <div class="chip">
                    <img src="{{creator.image}}" alt="avatar">
                    <a href="/stories/user/{{creator._id}}">{{creator.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}">READ MORE</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No stories to display.</p>
    {{/each}}
</div>